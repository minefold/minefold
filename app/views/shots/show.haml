%div.shot-header
  - if @shot
    %h1.title= @shot.title
  %h2.byline
    %span.user-byline
      by
      %a.user{href: "/shots/#{@shot.creator.slug}"}=@shot.creator.username
    - if @shot.shot_album
      %span.album-byline
        in
        %a.album{href: "/shots/#{@shot.creator.slug}/#{@shot.shot_album.slug}"}= @shot.shot_album.name
    %span.date-byline
      on
      %span.date= @shot.created_at

%div.shot-body
  %img{src: @shot.file.full.url}
