%h1= "Shots in #{@shot_album.name}"

%p
  %a{href: "/shots/#{@user.slug}"}=" ‚Üê all shots by #{@user.username}"

%div.shots
  - for shot in @shots
    %div.shot
      %a.shot-link{href: "/shots/#{shot.id}-#{shot.slug}"}
        %img{src: shot.file.quart.url, width: 240}
        - unless shot.title.blank?
          %h3.title= shot.title
        / todo: format
        %h5.date= shot.created_at

= render partial: 'pager'