    %meta{name:'description', content:'Play Minecraft on demand with friends.'}
    %meta{name:'keywords', content:%w(gaming games game minecraft server hosting multiplayer).join(',')}
    = favicon_link_tag

    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %meta{property: 'og:site_name', content: 'Minefold'}
    %meta{property: 'fb:app_id', content: ENV['FB_APP_ID']}
    = csrf_meta_tags

    = javascript_include_tag '//d3ds63zw57jt09.cloudfront.net/1.9/pusher.min.js'
    = javascript_include_tag '//maps.google.com/maps/api/js?sensor=false'
    = javascript_include_tag 'application'

    /[if lt IE 9]
      = javascript_include_tag '//html5shim.googlecode.com/svn/trunk/html5.js'

    = javascript_include_tag "//use.typekit.com/#{ENV['TYPEKIT_ID']}.js"
    :javascript
      try{Typekit.load();}catch(e){}

    = render partial: 'shared/mixpanel'

    = yield :head

  %body{lang: 'en'}
    %nav.accessibility
      %ol
        %li= link_to 'Skip to navigation', '#nav'
        %li= link_to 'Skip to content', '#content'
        %li= link_to 'Skip to footer', '#footer'

    %hr

    %header
      .wrapper
        %h1
          = link_to root_url do
            Minefold
            %em Beta

        %ol#nav
          - if not user_signed_in?
            %li.pricing= link_to 'Pricing', pricing_page_path
            %li.blog= link_to 'Blog', 'http://blog.minefold.com'
            %li.feedback= link_to 'Feedback', 'http://getsatisfaction.com/minefold'
            %li.signin= link_to 'Sign In', new_user_session_path
          - else
            %li.dashboard= link_to 'Dashboard', user_root_path
            %li.blog= link_to 'Blog', 'http://blog.minefold.com'
            %li.feedback= link_to 'Feedback', 'http://getsatisfaction.com/minefold'

            %li.user
              = link_to current_user do
                = image_tag current_user.avatar_url(:head, :s18), width: 18, height:18, alt: current_user.username

              %ol
                %li.profile= link_to 'Profile', current_user
                %li.settings= link_to 'Settings', account_path
                %li.sign-out= link_to 'Signout', destroy_user_session_path, method: :delete


            %li.buy= link_to 'Buy time', time_account_path
            %li.time
              .hours #{current_user.hours_left}h left

        :javascript
          var userMenuView = new MF.UserMenuView({
            el: $('header #nav .user')
          });


    %hr

    - if not flash.empty?
      #flash.wrapper
        - flash.each do |type, message|
          %div.message{class: type}
            %a.hide{href: '#'} Hide
            = simple_format(message)

      :javascript
        // Manual hide
        $('#flash a.hide').click(function() { $(this).parent().hide(); });

        // Timeout hide
        $('#flash .message').each(function(i){
          var elm = $(this), t = 4000 + (i + 250);
          delay(t, function(){ elm.hide(); });
        });

    %section#masthead
      .wrapper= yield :masthead

    #page= yield

    %hr

    %footer#footer
      .wrapper
        %ul
          %li.help= link_to 'Help & FAQ', help_page_path
          %li.about= link_to 'About', about_page_path
          %li.blog= link_to 'Blog', 'http://blog.minefold.com'
          %li.feedback= link_to 'Feedback', 'http://getsatisfaction.com/minefold'
          -# %li.press= link_to 'Press', press_page_path
          -# %li.jobs= link_to 'Jobs', jobs_page_path

          %li.twitter= link_to 'Follow us on Twitter', 'https://twitter.com/minefold'

        %p.fineprint
          &copy; 2011 Minefold.
          #{link_to 'Privacy', privacy_page_path} &amp; #{link_to 'Terms', terms_page_path}.

    - if Rails.env.production?
      = render partial: 'shared/analytics'
