    = render partial: 'shared/mixpanel'

    = yield :head

  %body{lang: 'en'}

    #backside
      .map
      .overlay

    %header
      .wrapper
        %h1
          = link_to root_url do
            Minefold
            %em Beta

        %ol#nav
          - if not user_signed_in?
            %li.pricing= link_to 'Pricing', pricing_page_path
            %li.feedback= link_to 'Help', 'http://getsatisfaction.com/minefold'
            %li.blog= link_to 'Blog', 'http://blog.minefold.com'

            %li.signin= link_to 'Sign In', new_user_session_path
            %li.signup= link_to 'Sign Up', new_user_path

          - else
            %li.dashboard= link_to 'Dashboard', user_root_path
            %li.blog= link_to 'Blog', 'http://blog.minefold.com'
            %li.feedback= link_to 'Feedback', 'http://getsatisfaction.com/minefold'

            %li.user
              = link_to current_user do
                = avatar_tag(current_user, 20)

              %ol
                %li.profile= link_to 'Profile', current_user
                %li.settings= link_to 'Settings', account_path
                %li.sign-out= link_to 'Signout', destroy_user_session_path, method: :delete


              %li.buy= link_to 'Buy time', time_account_path
              %li.time
                .hours #{current_user.hours_left}h left

        :javascript
          var userMenuView = new Mf.UserMenuView({el: $('header #nav .user')});

    - if not flash.empty?
      #flash
        - flash.each do |type, message|
          %div.message{class: type}
            %a.hide{href: '#'} Hide
            = simple_format(message)

      :javascript
        // Manual hide
        $('#flash a.hide').click(function() { $(this).parent().hide(); });

        // Staggers multiple messages from hiding.
        var t = 2000;

        // Timeout hide
        $('#flash .message').each(function(i){
          var elm = $(this);
          // Counts the number of words in the message, giving 600ms to read each word.
          t += (elm.text().split(/\s+/).length * 600) + (i * 300);
          delay(t, function(){ elm.slideUp(); });
        });

    = yield :masthead

    = yield

    %footer
      %ul
        %li.about= link_to 'About', about_page_path
        %li.help= link_to 'Help & FAQ', help_page_path
        %li.blog= link_to 'Blog', 'http://blog.minefold.com'
        %li.feedback= link_to 'Feedback', 'http://getsatisfaction.com/minefold'
        -# %li.press= link_to 'Press', press_page_path
        -# %li.jobs= link_to 'Jobs', jobs_page_path

        %li.twitter= link_to 'Follow us on Twitter', 'https://twitter.com/minefold'

