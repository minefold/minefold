!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge'}

    %title Minefold
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Paytone+One:regular&v1'
    = stylesheet_link_tag 'application'
    = favicon_link_tag

    = csrf_meta_tags
    %meta{name: 'pusher_key', content: Pusher.key}

    - # TODO: Write description
    %meta{name:'description', content:'Social Minecraft. Play with friends in the clouds.'}
    - # TODO: Write tags
    %meta{name:'keywords', content:%w().join(',')}

    - # TODO: OpenGraph tags

    %script{src: 'http://js.pusherapp.com/1.8/pusher.min.js'}

  %body{page_css_selector}
    %header.global
      .container
        %h1= link_to 'Minefold', root_url

        %aside
          = render template: 'sessions/show'

    #content
      #page.container
        = yield

    %footer.global
      .container
        = render partial: 'shared/footer'

    #templates= yield :templates

    = javascript_include_tag 'application'

    - if Rails.env.production?
      = render partial: 'shared/stats'
