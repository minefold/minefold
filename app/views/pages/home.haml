- content_for :tail do
  /
    :javascript
      var drawPipe, grid, gridScaleX, gridScaleY, h, paper, start, w;

      paper = Raphael('canvas');

      gridScaleX = 20;
      gridScaleY = 12;

      drawPipe = function(pipe) {
        var path, pt;
        path = [];

        for (var i = 0; i < pipe.pts.length; i++) {
          pt = pipe.pts[i];
          path.push('L');
          path.push(pt.x * gridScaleX);
          path.push(pt.y * gridScaleY);
        }

        path[0] = 'M';

        paper.path(path).attr({
          stroke: 'white',
          'stroke-width': 6,
          opacity: 0.1
        });
      };

      w = Math.ceil(paper.width / gridScaleX);

      h = Math.ceil(paper.height / gridScaleY);

      grid = new PipesView.Grid(w, h);

      start = new PipesView.Pt(10, 0);
      pipe = new PipesView.Pipe(grid);
      pipe.add(start);

      pipe.build();

      drawPipe(pipe);


