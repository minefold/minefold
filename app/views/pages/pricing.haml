- title 'Pricing'
- layout :pricing
= track 'Viewed pricing'

.jumbotron
  %h1 Pay when you play
  %h2 Your first #{pluralize Bonuses::GettingStarted.coins, 'minute', 'minutes'} are free.

.salotron
  %h2 SALE! 20% off until April 20th

.container
  .coin-pack-list.row
    - @packs.each_with_index do |pack, i|

      = form_tag orders_path, method: 'POST', class: %w(coin-pack span3) do |f|
        %input{type: 'hidden', name: 'coin_pack_id', value: pack.id}
        %input{type: 'hidden', name: 'stripeToken'}

        .price= number_to_currency(pack.cents / 100, precision: 0)
        .coins Play for #{number_with_delimiter(pack.shared_hours)} hours

        .nopa
          - if i != 0
            .savings
              You save
              - p = @packs.first
              #{number_to_percentage(100 * (1 - (pack.cents / pack.coins.to_f) / (p.cents / p.coins.to_f)), precision: 0)}!


        - if signed_in?
          %a.btn.btn-block.btn-large.btn-stripe{href: '#', data: {id: pack.id, amount: pack.cents, coins: pack.coins, image: image_path("coin_packs/#{i+1}.png")}} Buy #{time_left(pack.coins)}
        - else
          %a.btn.btn-block.btn-large{href: new_user_registration_path} Sign up now!

  %hr.small.hidden

  - content_for :tail do
    = javascript_include_tag "https://checkout.stripe.com/v2/checkout.js"
    :javascript
      $('.btn-stripe').click(function(){
        var $this = $(this),
            $form = $this.parents('form');

        var token = function(card) {
          $form.find('input[name=stripeToken]').val(card.id);
          $form.submit();
        }

        StripeCheckout.open({
          key: #{ENV["STRIPE_PUBLISHABLE"].to_json},
          amount: $this.data('amount'),
          name: 'Minefold',
          description: (formatNumber($this.data('coins')) + " minutes"),
          image: $this.data('image'),
          panelLabel: 'Pay',
          token: token
        });

        mixpanel.track('Clicked Stripe button', {
          'coin pack': $this.data('id')
        });

        return false;
      });

  %hr.large

