
#container(style="width: 800px; height: 400px; margin: 0 auto")

- content_for :tail do
  %script{src: '//cdnjs.cloudflare.com/ajax/libs/highcharts/2.3.5/highcharts.js'}
  :javascript
    $(function () {
        var chart;
        $(document).ready(function() {
            chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'container',
                    type: 'column'
                },
                title: {
                    text: 'Session Hours Last Week'
                },
                xAxis: {
                    categories: #{@histogram.keys.to_json}
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Percentage (%)'
                    }
                },
                tooltip: {
                    formatter: function() {
                        return ''+this.x +': '+ this.y +' %';
                    }
                },
                plotOptions: {
                    column: {
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                  data: #{@histogram.values.to_json},
                  showInLegend: false
                }]
            });
        });

    });