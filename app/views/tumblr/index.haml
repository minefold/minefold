!!!
%html{lang: 'en', dir: 'ltr'}
  %head
    %meta{charset: 'utf-8'}
    - #= stylesheet_link_tag 'http://static.tumblr.com/p71ulni/254mbfyii/tumblr.css', media: 'all'
    = stylesheet_link_tag 'tumblr.css', media: 'all'

    %title
      {Title}{block:SearchPage} ({lang:Search results for SearchQuery}){/block:SearchPage}{block:PostSummary} ({PostSummary}){/block:PostSummary}

    %meta{name: 'author', content: 'Mütli Corp <http://mutlicorp.com>'}
    %meta{name: 'description', content: '{block:IndexPage}{block:Description}{MetaDescription}{/block:Description}{/block:IndexPage}{block:PermalinkPage}{PostSummary}{/block:PermalinkPage}'}

    = favicon_link_tag '{Favicon}'
    %link{rel: 'alternate', type: 'application/rss+xml', title: 'RSS', href: '{RSS}'}
    
    /[if lt IE 9]
      %script{src: '//html5shim.googlecode.com/svn/trunk/html5.js'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    
    // Typekit
    %script{type: 'text/javascript', src: '//use.typekit.net/qzl8aqw.js'}
    :javascript
      try{Typekit.load();}catch(e){}
    
  %body.l-tumblr{class: '{block:PermalinkPage}is-permalink{/block:PermalinkPage}'}
    #page-background-block

      %header
        .navbar.navbar-static-top.container
          .navbar-inner
            .pull-left
              = link_to 'Mütli Corp Blog', root_path, class: 'brand'

            .pull-right
              .motto {Description}
              
      .container
        .posts
          {block:Posts}
          .post
          
            // Photo
            
            {block:Photo}
            .photo-post
              {LinkOpenTag}
              %img{src: '{PhotoURL-500}', alt: '{PhotoAlt}'}
              {LinkCloseTag}
                        
              {block:Caption}
              %p.post-caption {Caption}
              {/block:Caption}
            {/block:Photo}


            // Photoset
            
            {block:Photoset}
            .photoset-post
              {Photoset-500}
              {block:Caption}
              %p.post-caption {Caption}
              {/block:Caption}
            {/block:Photoset}
          
          
            // Video
          
            {block:Video}
            .video-post
              {Video-500}
              {block:Caption}
              %p.post-caption {Caption}
              {/block:Caption}
            {/block:Video}
            
            // Link

            {block:Link}
            .link-post
              %h2
                %a{href: '{URL}'} {Name}
              {block:Description}
              %p.post-body {Description}
              {/block:Description}
            {/block:Link}

            
            // Text

            {block:Text}
            .text-post
              {block:Title}
              %h2
                %a{href: '{Permalink}'} {Title}
              {/block:Title}
              .post-body {Body}
              {block:More}
              %p.post-read-more
                %a{href: '{Permalink}'} {lang:Read more}
              {/block:More}
            {/block:Text}
            
            .meta
              .pull-left
                %a{href: '{Permalink}'}
                  {block:Date}
                  {DayOfMonth} {Month}, {Year}
                  {/block:Date}
              .pull-right
                {block:IfShowNotes}
                {block:NoteCount} ({NoteCountWithLabel}) {/block:NoteCount}
                {/block:IfShowNotes}
            
          {/block:Posts}


          {block:Pagination}
          .pagination
            %ul
              {block:NextPage}
              %li
                %a{href: '{NextPage}'} {lang:Next page}
              {/block:NextPage}
                     
              {block:PreviousPage}
              %li
                %a{href: '{PreviousPage}'} {lang:Previous}
              {/block:PreviousPage}
              
            %p.pagination-guide {lang:CurrentPage of TotalPages}
          {/block:Pagination}
        

    %footer
      .container
        %ul.unstyled.pull-left
          %li= link_to 'Minefold', 'http://minefold.com'
          %li= link_to 'Archive', '/archive'

        %p.copyright.pull-right
          &copy; 2012
          %a{href: 'http://mutlicorp.com'} Mütli Corp.

    // Gauges
    :javascript
      var _gauges = _gauges || [];
      (function() {
        var t   = document.createElement('script');
        t.type  = 'text/javascript';
        t.async = true;
        t.id    = 'gauges-tracker';
        t.setAttribute('data-site-id', '4ef95acaf5a1f528f100000b');
        t.src = '//secure.gaug.es/track.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(t, s);
      })();
