- title server.name
- layout :server
= render partial: 'page_header', locals: {server: server}

%ul.nav.nav-horizontal.nav-server
  %li.active= link_to 'Activity', server
  - if server.funpack.game.minecraft?
    %li= link_to 'Map', [:map, server]
  - if can? :update, server
    %li= link_to 'Settings', [:edit, server]

/ --

.server-controls
  .row
    .status.span2{class: ('running' if server.running?)}
      - if server.running?
        Running
        .address #{server.id}.pluto.minefold.com
        .uptime= time_ago_in_words server.created_at
      
      - else
        Stopped

    .controls.span6
      %h3 Server controls
      Run the server for
      %select
        - (1..24).each do |hour|
          %option= pluralize hour, 'hour', 'hours'
        
      %p
        This will cost <strong>10 credits</strong>. (You have #{current_user.credits} cr)
        It will stop running at #{5.hours.from_now}
      %p
        %a.btn.btn-primary{href: '#'} Start

