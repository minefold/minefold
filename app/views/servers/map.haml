- title 'Map'

.page-header.page-header-server
  %h1= server.name


%ul.nav.nav-horizontal.nav-server
  %li= link_to 'Overview', server
  - if server.funpack.game.minecraft?
    %li.active= link_to 'Map', [:map, server]
  %li= link_to 'Players', [server, :memberships]
  - if can? :edit, server
    %li= link_to 'Settings', [:edit, server]


- content_for :tail do
  = javascript_include_tag '//maps.google.com/maps/api/js?sensor=false'
  :javascript
    $(document).ready(function() {
      var world = new Application.World(#{{}.to_json});

      var worldMapView = new Application.WorldMapView({model: world});
      $('.map').append(worldMapView.el);
      worldMapView.render();
    });

.map
