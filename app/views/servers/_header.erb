<div class="server-header">
  <nav class="actions">
    <ul>
      <% if signed_in? and can?(:edit, server) %>
        <li class="settings">
          <a href="<%= edit_server_path(server) %>">
            <span data-icon="&#xF06B;"></span>
            Settings
          </a>
        </li>
      <% end %>
    </ul>
  </nav>

  <h1>
    <%= link_to server.name, server_path(server) %>
  </h1>

  <%= render partial: 'tags', :locals => {server: server} %>
</div>
