#session
  = current_user.username
  %a{href: '/sign_out'} Sign Out

= link_to 'Create new world', new_world_path

%h2 Worlds

#worlds
  - if @worlds.empty?
    %p There are no active worlds
  - else
    %ul
      - @worlds.each do |world|
        %li
          %strong
            = link_to world.name, "/#{world.slug}"
          -# = button_to 'Activate', [:activate, world], :disabled => current_user.world == world


