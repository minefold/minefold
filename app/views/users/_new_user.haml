= form_for new_user do |f|
  - if referrer
    %section.referral
      %p You've been referred by #{referrer.username}

  %section.username
    = f.label :username, 'Minecraft Username'
    = error_messages_for(f.object, :username)

    = f.text_field :username, tabindex: 1, placeholder: 'notch'
    = render partial: 'users/check_username'

  %section.email
    = f.label :email
    = error_messages_for(f.object, :email)

    = f.email_field :email, tabindex:2, value: new_user.email || '', placeholder: 'notch@mojang.com'

  %section.password
    = f.label :password, 'Choose a password'
    = error_messages_for(f.object, :password)

    = f.password_field :password, tabindex: 3

  %section.password-confirmation
    = f.label :password_confirmation, 'Confirm password'
    = error_messages_for(f.object, :password_confirmation)

    = f.password_field :password_confirmation, tabindex: 4

  %section
    = f.submit 'Start playing now', tabindex: 5
    .spinner{hidden}
