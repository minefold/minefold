%li.support= link_to 'Support', support_page_path
%li.pricing= link_to 'Pricing', pricing_page_path
%li.sign-up= link_to 'Sign up', new_user_registration_path

%li.divider-vertical

%li.sign-in.dropdown
  %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}} Sign in
  .dropdown-menu.sign-in-dropdown-menu.pull-right
    = form_for :user, as: :user, url: session_path(:user) do |f|
      = f.hidden_field :remember_me, value: true

      .control-group
        .controls
          = f.text_field :email_or_username, placeholder: 'Email or username'

      .control-group
        .controls
          = f.password_field :password, placeholder: 'Password'

      .form-actions
        = f.submit 'Sign in', tabindex: 4, class: %w(btn btn-primary)
