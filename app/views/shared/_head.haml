    w.onerror = function(e,f,l) {
      cm.e = cm.e || []; cm.e.push([e,f,l]);
      if (woe) woe(e,f,l);
    };
    var e = d.createElement('script');
    e.async = true;
    e.src = '//tracker.crashm.at/';
    (d.head || d.getElementsByTagName('head')[0]).appendChild(e);
  })(window, document, window._crashmat, window.onerror);

