- js do
  :javascript
    $(document).ready(function() {
      new Mf.UserMenuView({el: $('.current-user-nav .player')});
    });

%ol.current-user-nav
  - if not signed_in?
    %li.signup= link_to 'Sign Up', new_user_path
    %li.signin= link_to 'Sign In', new_user_session_path

  - elsif not current_user.verified?
    %li.sign-out= link_to 'Sign out', destroy_user_session_path, method: :delete

  - elsif current_user.verified?
    %li.plan
      - if not current_user.pro?
        %span.time #{current_user.hours_left}h left
        = link_to pro_account_path, class: 'upgrade' do
          Upgrade to Pro!

    %li.player
      = link_to player_path(current_user.minecraft_player) do
        = player_avatar_tag current_user.minecraft_player, size: :small

      %ol
        %li.profile= link_to 'Profile', player_path(current_user.minecraft_player)
        %li.settings= link_to 'Settings', edit_user_path
        %li.sign-out= link_to 'Sign out', destroy_user_session_path, method: :delete
