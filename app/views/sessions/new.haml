- title_and_masthead  'Sign In'

%article
  = form_for :user, as: :user, url: session_path(:user) do |f|
    %section.email
      = f.label :email_or_username, 'Email or Minecraft username'
      = f.text_field :email_or_username, tabindex: 1

    %section.password
      = f.label :password do
        Password
        = link_to 'Forgot your password?', new_user_password_path, class: 'forgot'
      = f.password_field :password, tabindex: 2

    %section
      = f.submit 'Sign in', tabindex: 4
      .remember-me
        = f.check_box :remember_me, tabindex: 3
        = f.label :remember_me
