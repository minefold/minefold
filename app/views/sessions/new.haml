- title  'Sign in'
- layout :auth

.page-header
  %h1 Sign in to Minefold

.row
  .span4.offset4
    %center
      = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: %w(btn btn-large btn-primary)

    %hr

    = form_for :user, as: :user, url: session_path(:user), class: %w(form-horizontal) do |f|
      - if flash[:alert]
        %section.errors
          = flash[:alert]

      %fieldset
        .control-group
          .controls
            = f.text_field :email_or_username, placeholder: 'Email or Minecraft username', tabindex: 1, class: %w(span4)

        .control-group
          .controls
            = f.password_field :password, placeholder: 'Password', tabindex: 2, class: %w(span4)

        .control-group
          .controls
            = f.label :remember_me, class: 'checkbox' do
              = f.check_box :remember_me, tabindex: 3
              Remember me

        .form-actions
          = f.submit 'Sign in', tabindex: 4, class: %w(btn)

      %fieldset.forgotten
        = link_to new_user_password_path, class: 'forgot' do
          Forgotten your password?