    $.ajax({
      type:'GET',
      dataType:'jsonp',
      url:'#{map_asset_path}/base.png',
      success: function() {
          $('#mcmap').show();
          $.world_map({ path: '#{map_asset_path}' });
        },
      error: function() { 
          $('#nomap').show();
        }
