- if params[:funpack]
  - title 'Create a world'
  .page-header
    %h1 Create a world

  = form_for world, html: {id: 'new-world', class: 'form-horizontal'} do |f|
    = render partial: 'form', object: f

    .form-actions
      = f.submit 'Create world', tabindex: 8, class: %w(btn btn-primary)


- else
  - title 'Choose a Funpack'
  .page-header
    %h1 Choose a Funpack

  - Funpack.all.each do |funpack|
    %section.well
      %h1= link_to funpack.name, new_worlds_path(funpack: funpack.id)
      %p= markdown funpack.description
