= render partial: 'worlds/header'

/ - content_for :before do
/   %section
/     %h2
/       %strong= pluralize world.connected_players_count, 'person', 'people'
/       playing here now
/     %ul
/       - world.connected_players.each do |player|
/         %li
/           = link_to '#' do
/             .username
/               = player.username

- content_for :after do
  %section.settings
    .pvp{class: (world.pvp? ? 'yay' : 'nay')}
      = world.pvp? ? 'Player vs Player' : 'Free for all'
    .pvp{class: (world.spawn_monsters? ? 'yay' : 'nay')}
      = world.spawn_monsters? ? 'Monsters' : 'Friendly'
  


#stream
  - if signed_in?
    #share
      = form_tag wall_items_path(world.creator.id, world.id), method: :post do |f|
        .avatar
          = image_tag current_user.gravatar_url(size: 36)
        = text_area_tag :body, '', rows: 2, autofocus: true, required: true

        .submit
          %button Share
          .advice ENTER to chat, SHIFT-ENTER for a new line.


  #wall-items
    = template 'worlds/_wall_item', collection: world.wall_items
