#stream
  - if signed_in?
    #share
      = form_tag wall_items_path(world.creator.id, world.id), method: :post do |f|
        .avatar
          = image_tag current_user.gravatar_url(size: 36)
        = text_area_tag :body, '', rows: 2, autofocus: true

        .submit
          %button Share
          .advice ENTER to chat, SHIFT-ENTER for a new line.


  #wall-items
    = template 'worlds/_wall_item', collection: world.wall_items
