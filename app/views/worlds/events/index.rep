r.list_of :events, world.events do |event|
  r.element :type, event.class.name.downcase
  r.element :created_at

  r.element :source do |s|
    r.element :id
    r.element :url, url_for(event.source)
    r.element :username
    r.element :avatar, event.source.avatar.head.s24.url
  end

  case event
  when Chat
    r.element :text
  end

end
