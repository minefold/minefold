- title 'Explore'
- masthead do
  %h1 Explore

.worlds
  - @worlds.per(12).each do |world|
    .world
      = link_to player_world_path(world.creator.minecraft_player.username, world), class: 'thumb' do
        = image_tag world.photo.small.url, width: 140, height: 140

      .creator
        .avatar= image_tag world.creator.minecraft_player.avatar.small.url, width: 15, height: 15
        = link_to_player world.creator.minecraft_player

.pagintion
  = paginate @worlds
