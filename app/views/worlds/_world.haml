%div.world-card[world]
  = link_to player_world_path(world.creator.minecraft_player, world) do
    .thumb
      = image_tag world.cover_photo.small.url, width: 220, height: 140, alt: world.fullname

    %h3.name= world.name

  .meta
    .creator
      by #{link_to_player world.creator.minecraft_player}
