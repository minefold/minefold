- if world.creator.minecraft_player
  .world-card
    %a{href: player_world_path(world.creator.minecraft_player, world)}
      = image_tag world.cover_photo.small.url, width: 260, height: 195, alt: world.fullname

    .caption
      .world-fullname
        %span.creator= world.creator.username
        %span.slash> /
        %strong.name= world.name

    = render partial: 'worlds/meta', locals: {world: world}
