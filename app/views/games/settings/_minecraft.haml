= f.control_group :seed do
  .control-label Map Seed
  .controls
    = f.text_field :seed, tabindex: 2

:javascript
  var seed = document.getElementById('server_settings_seed');
  if (seed.value === '') {
    seed.value = new Date().getTime();
  }


