= f.control_group :maxrounds do
  = f.label :maxrounds, class: 'control-label'
  .controls
    %input#server_settings_maxrounds{type: 'range', name: 'server[settings][maxrounds]', min: 1, max: 100}
    / = f.range_field :max
    /   = f.radio_button :game_mode, 0, tabindex: 3, checked: true
    /   Survival
    /   %p.help-block
    /     Search for resources, crafting, gain levels, health and hunger

= f.control_group :autoteambalance do
  .control-label Gameplay
  .controls
    = f.label :autoteambalance, class: 'checkbox' do
      = f.check_box :pvp, tabindex: 5, checked: true
      Auto team balancing
