- title 'Reset your password'

.page-header
  %h1 Reset your password

.row
  .span4
    = form_for :user, url: new_user_password_path, method: :post do |f|

      %fieldset
        %section.email
          = f.label :email
          = f.email_field :email
          - resource.errors[:email].each do |error|
            .alert.alert-error
              Email
              = error


      = f.submit 'Send password reset email', class: %w(btn btn-primary)