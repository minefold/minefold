%h2 Sign in

= form_for :user, as: :user, url: session_path(:user) do |f|
  %p= f.email_field :email, placeholder: 'email@example.com'

  %p= f.password_field :password, placeholder: 'password'

  %p.remember-me
    = f.check_box :remember_me
    = f.label :remember_me

  %p= f.submit 'Sign in'

