%h2 Sign in

= form_for :user, as: :user, url: session_path(:user) do |f|
  .email
    = f.email_field :email, placeholder: 'email@example.com'

  .password
    = f.password_field :password, placeholder: 'password'

  .remember-me
    = f.check_box :remember_me
    = f.label :remember_me

  .signin
    = f.submit 'Sign in'
