- title  'Sign in'
- layout :auth

.row
  .span6
    %center
      .page-header
        %h1 Sign in to Minefold

  .span4
    = link_to "Sign in using Facebook", user_omniauth_authorize_path(:facebook), class: %w(btn btn-large btn-primary)
    
    = form_for :user, as: :user, url: session_path(:user), class: %w(form-horizontal) do |f|

      %fieldset
        .control-group
          .controls
            = f.text_field :email_or_username, tabindex: 1, class: %w(span4), placeholder: 'Email or username'

        .control-group
          .controls
            = f.password_field :password, tabindex: 2, class: %w(span4), placeholder: 'Password'
            %small.help-block
              = link_to new_user_password_path, class: 'forgot' do
                Forgotten your password?

        .control-group
          .controls

        .form-actions
          .control-group.pull-left
            .controls
              = f.label :remember_me, class: 'checkbox' do
                = f.check_box :remember_me, tabindex: 3
                Stay signed in

          .pull-right
            = f.submit 'Sign in', tabindex: 4, class: %w(btn)
