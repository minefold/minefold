- title 'Reset your password'

.container
  .page-header
    %h1 Reset your password

  .row
    .span4
      = form_for :user, url: user_password_path, method: :post do |f|
        - # TODO Show errors when user enters a email that doesn't exist

        %fieldset
          %section.email
            = f.label :email
            = f.email_field :email


        = f.submit 'Send password reset email', class: %w(btn btn-primary)
