- title funpack.name

= track_landing_type 'funpack'
= track 'Viewed landing page', type: 'funpack', game: funpack.game.slug, funpack: funpack.slug

%article.page.box
  .page-header
    %h1= funpack.name

  %ul.breadcrumb
    %li
      = link_to funpack.game.name, game_path(funpack.game)
      %span.divider /

    %li.active= funpack.name

  .row
    .span8
      - partial = funpack.slug.gsub('-', '_')

      - if lookup_context.find_all("funpacks/_#{partial}").any?
        = render partial: partial
      - else
        .lead= markdown(funpack.description)


    .span4
      %a.btn.btn-large.btn-block.btn-success{href: new_server_path(game: funpack.game.slug, funpack: funpack.slug)}
        Start a #{funpack.name} server
      %p
        %center
          Sign up now and play for #{Bonuses::GettingStarted.coins} minutes <strong>free</strong>!
