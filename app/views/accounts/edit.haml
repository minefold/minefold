- title_and_masthead 'Account Settings'

= render partial: 'nav'

= form_for current_user, url: account_path, method: :put do |f|
  %fieldset.username
    %h3= f.label :username, 'Minecraft Username'

    = f.text_field :username, maxlength: 16
    = error_messages_for(f.object, :username)
    = error_messages_for(f.object, :safe_username)

  %fieldset.email
    %h3= f.label :email

    = f.text_field :email
    = error_messages_for(f.object, :email)

  / TODO: enable link with facebook for signed in users
  / %fieldset.facebook
  /   - if current_user.facebook_linked?
  /     %p Linked with facebook
  /   - else
  /     = link_to user_omniauth_authorize_path(:facebook), class: 'btn' do
  /       Link with Facebook

  %fieldset.avatar
    %h3= f.label :avatar

    = avatar_tag current_user, :large, width: 60, height: 60
    .hint Change your avatar at #{link_to 'Minecraft.net', 'http://minecraft.net/profile', target: '_blank'}

  - if current_user.pro?
    %fieldset
      %h3 Pro Account
      - if current_user.beta?
        Enjoy your Beta account bro!
      - else
        Expires in #{time_ago_in_words current_user.plan_expires_at} from now (#{current_user.plan_expires_at.strftime("%d/%m/%Y")}).


  %fieldset.host
    %h3 Server Host
    = current_user.host
    %p.hint
      Don't know
      = link_to 'how to connect', help_page_path(anchor: 'connecting')
      ?

  %fieldset.submit
    = f.submit 'Update account'
