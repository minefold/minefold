- title_and_masthead 'Email Notifications'

#page
  = render partial: 'accounts/nav'

  %article
    = form_for current_user, url: account_path do |f|
      %fieldset
        %h3 Receive emails for the following
        = f.fields_for :notifications do |n|
          = setting n, :campaigns, 'News and info from Minefold'
          = setting n, :world_started, 'A friend starts playing in a world'
          = setting n, :world_membership_added, 'You have been added to a world'
          = setting n, :world_membership_request_created, 'Someone asks to join your world'

      %fieldset.submit
        = f.submit 'Update notifications'
