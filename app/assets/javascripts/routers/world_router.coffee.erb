#= require views/world/map_view

class Application.WorldRouter extends Backbone.Router
  routes:
    '': 'map'

  initialize: (options) ->
    @world = options.world

    @mapView = new Mf.WorldMapView(model: @world)
    $('#backside').append @mapView.el

  map: ->
    if @world.isMapped()
      @mapView.enter()
      @mapView.render()
