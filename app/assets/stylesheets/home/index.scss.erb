@import 'shared/vars';

#home-index {
  header.global {
    position: relative;
    z-index: 2;
  }

  #banner {
    padding-top: 4 * $baseline;
    padding-bottom: 8 * $baseline;

    h2 {
      padding: 2 * $baseline;
      font-size: 40px;
      line-height: 72px;
      text-align: center;
      text-shadow: 0 1px 0 rgba(white, 0.6);
      font-family: $museo;
      font-weight: 900;
    }

    p {
      width: 6 * ($gutter + $col + $gutter) - (2 * $gutter);
      margin: 0 auto;
      text-align: center;
      margin-bottom: 2 * $baseline;
      color: $blue;
    }

    form {
      color: darken($blue, 10%);
      text-align: center;
      margin-bottom: 4 * $baseline;
      div {
        margin-bottom: 2 * $baseline;
        font-weight: 600;
        text-shadow: 0 1px 0 rgba(white, 0.4);
      }

      .email input {
        width: 3 * ($gutter + $col + $gutter) - (2 * $gutter);
        text-align: center;

        &:focus {
          text-align: center;
          border-color: darken($blue, 10%);
        }

        &:-webkit-input-placeholder, &:-moz-input-placeholder {
          text-align: center;
        }
      }
    }
  }


  footer.global {
    text-align: center;
  }
}
